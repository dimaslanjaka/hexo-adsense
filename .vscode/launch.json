  "version": "0.2.0",
  "configurations": [
    {
      "command": "hexo clean && hexo server --development",
      "name": "hexo clean server from ../../",
      "request": "launch",
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}/../../",
      "type": "node-terminal"
    },
    {
      "command": "hexo server --development",
      "name": "hexo server from ../../",
      "request": "launch",
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}/../../",
      "type": "node-terminal"
    }
  ]
}