{
  "$schema": "http://json.schemastore.org/nodemon",
  "exec": "yarn run build && yarn run pack",
  "watch": [
    "./src/**/*.ts",
    "./rollup.config.js",
    "./gulpfile.js",
    "./test/demo/views/**/*",
    "./source/*"
  ],
  "ignore": [
    "**/.deploy_*/**",
    "**/node_modules/**",
    "**/temp/**",
    "**/dist/**",
    "**/tmp/**"
  ],
  "delay": 3000,
  "ext": "js,cjs,mjs,ts,xml,xsl,css,njk,ejs,pug",
  "verbose": true
}